                        <div class="text-nowrap">
                            @foreach (var social in Model.product_Socials)
                            {
                                <a class="btn btn-icon btn-light-primary btn-xs shadow-sm rounded-circle me-2" href="@social.SocialMediaSrc"><i class="fi-@social.SocialMediaName"></i></a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Location (Map)-->
        <div class="col-md-5">
