<section class="container pb-5 mb-md-4">
    <div class="row">
        <div class="col-md-7 mb-md-0 mb-3">
            <div class="card py-2 px-sm-4 px-3 shadow-sm">
                <div class="card-body mx-n2">
                    <!-- Place info-->
                    <div class="d-flex align-items-start mb-3 pb-3 border-bottom">
                        <img src="img/city-guide/brands/hotel.svg" width="60" alt="Thumbnail">
                        <div class="pe-2 me-1">
                            <h3 class="h5 mb-2"> @Model.Name</h3>
                            <ul class="list-unstyled d-flex flex-wrap fs-sm">
                                <li class="me-2 mb-1 pe-1"><i class="fi-star-filled mt-n1 ms-1 text-warning align-middle opacity-70"></i><b>@Model.Score </b></li>
                                <li class="me-2 mb-1 pe-1"><i class="fi-wallet mt-n1 ms-1 align-middle opacity-70"></i>@Model.lowPrice تومان</li>
                                <li class="me-2 mb-1 pe-1"><i class="fi-map-pin mt-n1 ms-1 align-middle opacity-70"></i>@Model.City</li>
                            </ul>
                        </div>
                    </div>
                    <!-- Place contacts-->
                    <div class="mb-3 pb-3 border-bottom">
                        <h4 class="h5 mb-2">تماس با ما: </h4>
                        <ul class="nav row row-cols-sm-2 row-cols-1 gy-1">
                            <li class="col"><a class="nav-link p-0 fw-normal d-flex align-items-start" href="#"><i class="fi-map-pin mt-1 me-2 align-middle opacity-70"></i>@Model.Address</a></li>
                            <li class="col"><a class="nav-link d-inline-block p-0 fw-normal d-inline-flex align-items-start" href="tel:@Model.phoneNumber"><i class="fi-phone mt-1 me-2 align-middle opacity-70"></i>@Model.phoneNumber</a></li>
                            <li class="col"><a class="nav-link p-0 fw-normal d-flex align-items-start" href="@Model.websiteUrl"><i class="fi-globe mt-1 me-2 align-middle opacity-60"></i>@Model.websiteUrl</a></li>
                            <li class="col"><a class="nav-link p-0 fw-normal d-flex align-items-start" href="@Model.Email"><i class="fi-mail mt-1 me-2 align-middle opacity-70"></i>@Model.Email</a></li>
                        </ul>
                    </div>
                    <!-- Place pricing-->
                    <div class="mb-3 pb-3 border-bottom">
                        <div class="row row-cols-sm-2 row-cols-1">
                            <div class="col mb-sm-0 mb-3">
                                <h4 class="h5 mb-0"><span class="fs-5">@Model.lowPrice-@Model.maxPrice تومان </span><span class="fs-base fw-normal text-body">/شب</span></h4>
                            </div>
                            <div class="col"><a class="btn btn-primary btn-lg rounded-pill w-sm-auto w-100" href="~/Order/bookBussiness?id=@Model.id">رزرو هتل<i class="fi-chevron-right fs-sm ms-2"></i></a></div>
                        </div>
                    </div>
                    <!-- Follow-->
                    <div class="d-flex align-items-center">
