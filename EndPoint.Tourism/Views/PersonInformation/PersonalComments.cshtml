
@{
    ViewData["Title"] = "PersonalComments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GetCommentPersonal
<div class="container mt-5 mb-md-4 py-5">
    <!-- Breadcrumbs-->
    <nav class="mb-4 pt-md-3" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="~/Home/Index">خانه</a></li>
            <li class="breadcrumb-item"><a href="city-guide-account-info.html">حساب کاربری</a></li>
            <li class="breadcrumb-item active" aria-current="page">لیست نظرات من</li>
        </ol>
    </nav>
    <!-- Account header-->
    <div class="d-flex align-items-center justify-content-between pb-4 mb-2">
        <div class="d-flex align-items-center">
            <div class="position-relative flex-shrink-0">
                <img class="rounded-circle border border-white" src="~/SiteFile/img/avatars/29.png" width="100" alt="Annette Black">
                <button class="btn btn-icon btn-light btn-xs rounded-circle shadow-sm position-absolute start-0 bottom-0" type="button" data-bs-toggle="tooltip" title="تغییر تصویر"><i class="fi-pencil fs-xs"></i></button>
            </div>
            <div class="pe-3 pe-sm-4">
                <h3 class="h4 font-vazir mb-2">@Model.PersonalInformation.FullName</h3><span class="star-rating"><i class="star-rating-icon fi-star-filled active"></i><i class="star-rating-icon fi-star-filled active"></i><i class="star-rating-icon fi-star-filled active"></i><i class="star-rating-icon fi-star-filled active"></i><i class="star-rating-icon fi-star-filled active"></i></span>
            </div>
        </div><a class="nav-link p-0 d-none d-md-block" href="~/Account/Logout"><i class="fi-logout mt-n1 me-2"></i>خروج</a>
    </div>
    <!-- Page content-->
    <div class="card card-body p-4 p-md-5 shadow-sm">
        <!-- Account nav-->
        <div class="mt-md-n3 mb-4">
            <a class="btn btn-outline-primary btn-lg rounded-pill w-100 d-md-none" href="#account-nav" data-bs-toggle="collapse"><i class="fi-align-justify me-2"></i>منو اکانت</a>
            <div class="collapse d-md-block" id="account-nav">
                <ul class="nav nav-pills flex-column flex-md-row pt-3 pt-md-0 pb-md-4 border-bottom-md">
                    <li class="nav-item mb-md-0 pe-md-1"><a class="nav-link" href="~/PersonInformation/PersonalInformation" aria-current="page"><i class="fi-user mt-n1 me-2 fs-base"></i>اطلاعات فردی</a></li>
                    <li class="nav-item mb-md-0 me-md-2 pe-md-1"><a class="nav-link" href="~/PersonInformation/PersonalFavorite"><i class="fi-heart mt-n1 me-2 fs-base"></i>مورد علاقه های من</a></li>
                    <li class="nav-item mb-md-0 me-md-2 pe-md-1"><a class="nav-link active" href="~/PersonInformation/PersonalComments"><i class="fi-star mt-n1 me-2 fs-base"></i>لیست نظرات من</a></li>
                    <li class="nav-item mb-md-0 me-md-2"><a class="nav-link" href="~/PersonInformation/GetMyOrders"><i class="fi-bell mt-n1 me-2 fs-base"></i>رزرو شده های من</a></li>
                    @if (Model.HasBussiness)
                    {
                        <li class="nav-item mb-md-0 me-md-2"><a class="nav-link" href="~/PersonInformation/GetAllOrders"><i class="fi-bell mt-n1 me-2 fs-base"></i>رزرو شده ها</a></li>

                    }
                    <li class="nav-item d-md-none"><a class="nav-link" href="#"><i class="fi-logout mt-n1 me-2 fs-base"></i>خروج</a></li>
                </ul>
            </div>
        </div>
        <div class="d-flex flex-md-row flex-column align-items-md-center justify-content-md-between mb-4 py-2">
            <h1 class="h4 mb-md-0">لیست نظرات من</h1>
        </div>
        @foreach (var item in Model.Comments)
        {
            <!-- Review-->
            <div class="row mb-4 pb-4 border-bottom">
                <div class="col-md-3 mb-md-0 mb-3">
                    <h2 class="mb-2 fs-base"><span class="fw-normal me-1">برای: </span><a class="nav-link d-inline-block p-0" href="~/Bussiness/DetailBussinessMain?id=@item.ProductId">@item.ProductName</a></h2>
                    <div class="mb-md-3 mb-2">
                        <span class="star-rating">
                            @for (byte i = 1; i <= 5; i++)
                            {
                                if (i <= item.Score)
                                {
                                    <i class="star-rating-icon fi-star-filled active"></i>
                                }
                                else
                                {
                                    <i class="star-rating-icon fi-star"></i>
                                }
                            }
                        </span>
                    </div><span class="fs-sm text-muted">@item.insertTime</span>
                </div>
                <div class="col-md-9">
                    <p class="mb-3">@item.Comments</p>                    
                </div>
            </div>
        }

    </div>
</div>
