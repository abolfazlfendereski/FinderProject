
@{
    ViewData["Title"] = "bookBussiness";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ProdoctbriefDto
<br />
<br />
<br />
<br />
<br />
<section class="container pb-5 mb-md-4">
    <h2 class="h5 mb-3">ثبت و رزرو</h2>
    <div class="row">
        <div class="col-md-6 mb-md-0 mb-3 right">
            <div class="card border-0 shadow-sm">

                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="result13" role="tabpanel">
                            <form class="needs-validation" asp-action="bookBussiness" asp-controller="Order">
                                <div class="row">
                                    <input name="BussinessId" value="@Model.BussinessId" hidden />
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label" for="validationCustom01">نام</label>
                                        <input class="form-control" name="Name" type="text" id="validationCustom01" placeholder="نام" required>

                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label" for="validationCustom02">نام خانوادگی</label>
                                        <input class="form-control" type="text" name="Family" id="validationCustom02" placeholder="نام خانوادگی" required>

                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label" for="validationCustomUsername">کدملی</label>
                                        <input class="form-control" name="Codemeli" type="text" maxlength="10" required>

                                    </div>
                                </div>
                                <div class="row">
                                    <label>تاریخ</label>
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="fi-calendar"></i>
                                        </span>
                                        <input name="FromDate" class="form-control date-picker date-range" type="text" placeholder="From date" data-datepicker-options='{"altInput": true, "altFormat": "F j, Y", "dateFormat": "Y-m-d"}' data-linked-input="#end-date">
                                        <input name="ToDate" class="form-control date-picker" type="text" placeholder="To date" data-datepicker-options='{"altInput": true, "altFormat": "F j, Y", "dateFormat": "Y-m-d"}' id="end-date">
                                    </div>
                                </div>
                                <br />
                                <div class="row">
                                   
                                    <div class="col-md-4 mb-3">
                                        <label for="number-input" class="form-label">تعداد نفرات</label>
                                        <input name="Number" class="form-control" type="number" max="10" min="1" id="number-input" value="2">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label" for="validationCustomUsername">شماره تلفن همراه</label>
                                        <input name="PhoneNumber" class="form-control" type="text" maxlength="11" id="validationCustomUsername" required>

                                    </div>
                                </div>

                                <button class="btn btn-primary" type="submit">ثبت</button>
                            </form>
                        </div>


                    </div>
                </div>
            </div>
        </div>
        <div class="col-6 left">
            <!-- Item-->
            <div class="d-flex align-items-start position-relative mb-4">
                <img class="flex-shrink-0 me-3 rounded-3" style="width:350px;height:300px;" src="~/Images/Product/@Model.Src" alt="Brand logo">
                <br /><br />
                <div>
                    <h3 class="mb-2 fs-lg"><a class="nav-link stretched-link" href="~/Bussiness/DetailBussinessMain?id=@Model.BussinessId">@Model.Name</a></h3>
                    <ul class="list-unstyled mb-0 fs-sm">                        
                        <li><i class="fi-map-pin mt-n1 ms-1 fs-base text-muted align-middle"></i>@Model.City</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/SiteFile/vendor/flatpickr/dist/flatpickr.min.js"></script>
<script src="~/SiteFile/vendor/flatpickr/dist/plugins/rangePlugin.js"></script>
<script src="~/SiteFile/vendor/persain-date/persian-date.js"></script>
<script src="~/SiteFile/vendor/persain-date/persian-datepicker.min.js"></script>
<!-- Main theme script-->
<script src="../js/theme.min.js"></script>
<script>
	$('#date').persianDatepicker({
    initialValue: true,
	format: 'YYYY/MM/DD'
});
$('#datetime').persianDatepicker({
    initialValue: true,
	timePicker: {
        enabled: true,
        meridiem: {
            enabled: true
        }
    }
});
$('#min-date').persianDatepicker({
	initialValue: true,
	format: 'YYYY/MM/DD',
    minDate: ((new persianDate()).unix()) * 1000
});
var to, from;
to = $(".range-to").persianDatepicker({
    inline: false,
    altField: '.range-to-example-alt',
    altFormat: 'LLLL',
    initialValue: false,
    onSelect: function (unix) {
        to.touched = true;
        if (from && from.options && from.options.maxDate != unix) {
            var cachedValue = from.getState().selected.unixDate;
            from.options = {maxDate: unix};
            if (from.touched) {
                from.setDate(cachedValue);
            }
        }
    }
});
from = $(".range-from").persianDatepicker({
    inline: false,
    altField: '.range-from-example-alt',
    altFormat: 'LLLL',
    initialValue: false,
    onSelect: function (unix) {
        from.touched = true;
        if (to && to.options && to.options.minDate != unix) {
            var cachedValue = to.getState().selected.unixDate;
            to.options = {minDate: unix};
            if (to.touched) {
                to.setDate(cachedValue);
            }
        }
    }
});
</script>